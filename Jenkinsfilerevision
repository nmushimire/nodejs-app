pipeline{
    agent { docker { image 'node:14'  // agent used here is docker_container
           args '-u root:root'}}
    stages{
      stage('Dep install'){ 
        steps{
         //   sh 'npm cache clean'
         //   sh 'sudo chown -R 995:993 "/.npm"'
            sh 'npm install'
        }
      }
      stage('package'){
         steps{
              sh 'rm -rf *.tgz || echo ""' // remove old artifact version use this command || OR echo "":run success on prompt
              sh 'npm pack'
         }
      }
      stage('upload artifactory'){
         steps{
         sh 'curl -uadmin:AP3Qc5nZm2nYEFqeDFD9RwQCnUB -T *.tgz \
         "http://ec2-44-204-154-213.compute-1.amazonaws.com:8081/artifactory/nodejs-app/dev-app${BUILD_ID}.tgz"'
         }
      }
      
    }
}